<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_green"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/homeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="Welcome back!"
        android:textColor="#47484C"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="416dp"
        android:layout_height="215dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeFragment"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/videoView"
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/news" />

            <ImageView
                android:id="@+id/uploadView"
                android:layout_width="408dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/features" />

            <ImageView
                android:id="@+id/rewardsView"
                android:layout_width="408dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/guides" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="BROWSE ALL"
        android:textColor="#47484C"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#eef2f3"
            android:drawableLeft="@drawable/chat_icon"
            android:text="Chat"
            android:textColor="#43A047" />

        <Button
            android:id="@+id/buttonMap"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#eef2f3"
            android:drawableLeft="@drawable/ic_map"
            android:text="Map"
            android:textColor="#43A047" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonEvent"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#eef2f3"
            android:drawableLeft="@drawable/ic_event"
            android:text="Event"
            android:textColor="#43A047"
            />

        <Button
            android:id="@+id/button4"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#eef2f3"
            android:drawableLeft="@drawable/faq"
            android:text="Help"
            android:textColor="#43A047" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/likesButton"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#eef2f3"
            android:drawableLeft="@drawable/ic_favorite"
            android:text="Like"
            android:textColor="#43A047"/>

        <Button
            android:id="@+id/buttonReward"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#eef2f3"
            android:drawableLeft="@drawable/reward_icon"
            android:text="Rewards"
            android:textColor="#43A047" />

    </LinearLayout>





</LinearLayout>
