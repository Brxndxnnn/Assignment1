<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars="none"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/gradient_background_green"
    tools:context=".SelectVideo">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/selectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Video Title (eg. Reusing used Plastics)"
        android:minHeight="48dp" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/selectTitle"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/selectVideoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoView"
        android:backgroundTint="#eef2f3"
        android:text="Select Video"
        android:textColor="#43A047"
        app:strokeWidth="2dp"/>

    <Button
        android:id="@+id/uploadVidBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectVideoBtn"
        android:backgroundTint="#eef2f3"
        android:text="Upload Video"
        android:textColor="#43A047"
        app:strokeWidth="2dp"/>

</RelativeLayout>
</ScrollView>
